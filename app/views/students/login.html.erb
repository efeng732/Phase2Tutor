<div class="login">

<h1> Hello, Please Login or Sign Up $_$! </h1>


<% if @error %>
<p style= "color: red; font-size: 24px"> <%= @error %></p>
<%end%>

<%= form_tag "/send_the_form_here" do %>
<%= label_tag :first_name %>
<%= text_field_tag :first_name%>
<%= label_tag :password%>
<%= password_field_tag :password %> <br>
<%= submit_tag "Login" %>
<%end%>
<br>
<%= button_to "Create a New Student", new_student_path, method: :get%>
<br>
</div>
<div class="center">
<img src="https://i.pinimg.com/originals/5f/fe/2e/5ffe2e4f39d5754040cb2a81aa20e55a.jpg">
</div>